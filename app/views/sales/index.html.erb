
<div class="container-index">


<div class=" container">

    <% if user_signed_in? %>
  <div class="row nouvelle">
    <div class="col-xs-12">
      <%= link_to "Nouvelle annonce", new_sale_path, class: "" %>
    </div>

  </div>
            <% end %>

  <div class="header-sale">
    <h3>Annonces - VENTES</h3>
  </div>

  <% @sales.each do |sale| %>
  <% if sale.visible == true %>
  <div class="row mb-4">






          <div class=" col-xs-12 col-sm-6 col-md-4">
            <div class="photo-vente" style="background-image: url('<%= cl_image_path sale.photo, height: 300, crop: :fill %>'); background-position: center; background-size: cover;">
            </div>
          </div>

          <div class=" col-xs-12 col-sm-6 col-md-5 description-vente">
            <div class="info-titre">
              <h3><i class="fas fa-map-marker-alt"></i>   <%= sale.localisation.capitalize %></h3>
              <h3><i class="fas fa-home"></i>   <%= sale.titre.capitalize %></h3>
              <h3><i class="fas fa-euro-sign"></i>Prix: <%= sale.price.capitalize %>€</h3>
              <h3><i class="fas fa-expand-arrows-alt"></i>Surface: <%= sale.surface.capitalize %>m²</h3>
            </div>


          </div>

          <div class=" col-xs-12 col-sm-12 col-md-3 lien-vente">
            <p><%= link_to "Voir l'annonce", sale_path(sale) %></p><br><br>
          </div>





  </div>
  <% end %>
      <% end %>
</div>
</div>

